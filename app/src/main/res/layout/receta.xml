<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Receta"
    android:background = "@drawable/gradient_background">


    <TextView
        android:id="@+id/textView4"
        android:layout_width="380dp"
        android:layout_height="133dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="casual"
        android:text="Elikagaiak klasifikatu ondoren,  lotu arrautzak, gurin girotua, azukrea eta gatza oragailuan. Nahastu dena ur pixka batekin minutu batzuetan.  Gehitu irina eta ura pixkanaka, eta oratu 35 minutuz masa elastikoa lortu arte. Utzi orea 10 minutuz pausatzen eta, azkenik, gehitu legamia eta pixkanaka-pixkanaka uretatik geratzen dena."
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/BtnCheckear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.645"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="379dp"
        android:layout_height="103dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="casual"
        android:text="Azkenik, gurin krema egiteko, ura azukrearekin irakiten jarriko dugu, xarabe bat egin arte. Utzi 30ยบ-35ยบ bitartean hozten, eta gehitu gurin leundua eta, ondoren, arrautza-gorringoa. Irabiatu etengabe, nahi den ehundura harroa eta kolore zurixkako krema lortu arte. "
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/Numero4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.625"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/Numero3"
        android:layout_width="53dp"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.055"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/Numero4"
        android:layout_width="53dp"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.055"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="346dp"
        android:layout_height="104dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="64dp"
        android:fontFamily="casual"
        android:text="Gero, 50-60 gramo inguruko bolak osatu, 9 cm inguru luzatu eta gainazal lau batean jarri, 2-3 orduz 40ยบ inguruan pausatzen uzteko. Igurtzi arrautzarekin eta bota azukre pixka bat gainetik. Egosi 200ยบ ingurura labea aurrez berotuta, 8 minutuz. Hoztu ondoren, erditik moztu eta gurinezko kremarekin igurtzi. "
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="365dp"
        android:layout_height="46dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="244dp"
        android:fontFamily="casual"
        android:text="Hasteko, elikagaiak mahai gainean jarriko ditugu eta Gurin-opila egiten hasiko gara. "
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Numero1"
        android:layout_width="53dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.044"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/Numero2"
        android:layout_width="53dp"
        android:layout_height="48dp"
        android:layout_marginBottom="12dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.055"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/BtnCheckear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Check"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>