<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.488">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <!-- JUEGOS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="275dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imageButtonJ1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?selectableItemBackgroundBorderless"
                    android:scaleType="fitXY"
                    tools:ignore="SpeakableTextPresentCheck"
                    tools:srcCompat="@drawable/AzkunaTxartelakCandado" />

                <ImageButton
                    android:id="@+id/imageButtonJ2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?selectableItemBackgroundBorderless"
                    android:scaleType="fitXY"
                    tools:ignore="SpeakableTextPresentCheck"
                    tools:srcCompat="@drawable/GaldetegiaCandado" />
            </LinearLayout>
            <!-- JUEGOS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="275dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:background="?selectableItemBackgroundBorderless"
                android:scaleType="fitXY"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imageButtonJ3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?selectableItemBackgroundBorderless"
                    android:scaleType="fitXY"
                    tools:ignore="SpeakableTextPresentCheck"
                    tools:srcCompat="@drawable/NorDaMarijaiaCandado" />

                <ImageButton
                    android:id="@+id/imageButtonJ4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?selectableItemBackgroundBorderless"
                    android:scaleType="fitXY"
                    tools:ignore="SpeakableTextPresentCheck"
                    tools:srcCompat="@drawable/happy_emoji" />
            </LinearLayout>
            <!-- JUEGOS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="275dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imageButtonJ5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?selectableItemBackgroundBorderless"
                    android:scaleType="fitXY"
                    tools:ignore="SpeakableTextPresentCheck"
                    tools:srcCompat="@drawable/basajaun2" />

                <ImageButton
                    android:id="@+id/imageButtonJ6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?selectableItemBackgroundBorderless"
                    android:scaleType="fitXY"
                    tools:ignore="SpeakableTextPresentCheck"
                    tools:srcCompat="@drawable/happy_emoji" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="275dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imageButtonJ7"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:background="?selectableItemBackgroundBorderless"
                    android:scaleType="fitXY"
                    tools:ignore="SpeakableTextPresentCheck"
                    tools:srcCompat="@drawable/basajaun2" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>