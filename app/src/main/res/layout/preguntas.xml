<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background = "@drawable/gradient_background"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnNext2"
        android:layout_width="72dp"
        android:layout_height="48dp"
        android:layout_marginStart="36dp"
        android:background="@drawable/button_rounded_border"
        android:fontFamily="casual"
        android:text="Next"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.936" />


    <Spinner
        android:id="@+id/spinner5"
        style="@style/spinner_style"
        android:layout_width="185dp"
        android:layout_height="48dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner4"
        app:layout_constraintVertical_bias="0.242"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/NoComer"
        android:layout_width="97dp"
        android:layout_height="95dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        android:background="#1d00ff"
        android:padding="4dp"
        app:layout_constraintEnd_toStartOf="@+id/spinner1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/nocomerbeber" />

    <ImageView
        android:id="@+id/Zentro"
        android:layout_width="92dp"
        android:layout_height="52dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="36dp"
        android:background="#1d00ff"
        android:padding="4dp"
        app:layout_constraintEnd_toStartOf="@+id/spinner4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NoCorrer"
        app:srcCompat="@drawable/azkunacolumnas" />

    <ImageView
        android:id="@+id/Silencio"
        android:layout_width="92dp"
        android:layout_height="94dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="88dp"
        android:background="#1d00ff"
        android:padding="4dp"
        app:layout_constraintEnd_toStartOf="@+id/spinner5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Zentro"
        app:srcCompat="@drawable/isiltasuna" />

    <Spinner
        android:id="@+id/spinner1"
        style="@style/spinner_style"
        android:layout_width="185dp"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.046"
        tools:ignore="SpeakableTextPresentCheck" />

    <Spinner
        android:id="@+id/spinner2"
        style="@style/spinner_style"
        android:layout_width="185dp"
        android:layout_height="48dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner1"
        app:layout_constraintVertical_bias="0.117"
        tools:ignore="SpeakableTextPresentCheck" />

    <Spinner
        android:id="@+id/spinner3"
        style="@style/spinner_style"
        android:layout_width="185dp"
        android:layout_height="48dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner2"
        app:layout_constraintVertical_bias="0.138"
        tools:ignore="SpeakableTextPresentCheck" />

    <Spinner
        android:id="@+id/spinner4"
        style="@style/spinner_style"
        android:layout_width="185dp"
        android:layout_height="48dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner3"
        app:layout_constraintVertical_bias="0.158"
        tools:ignore="SpeakableTextPresentCheck" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/button_rounded_border"
        android:fontFamily="casual"
        android:text="Check"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/NoGritar"
        android:layout_width="97dp"
        android:layout_height="96dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="83dp"
        android:background="#1d00ff"
        android:padding="4dp"
        app:layout_constraintEnd_toStartOf="@+id/spinner2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NoComer"
        app:srcCompat="@drawable/nogritar" />

    <ImageView
        android:id="@+id/NoCorrer"
        android:layout_width="94dp"
        android:layout_height="94dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="28dp"
        android:background="#1d00ff"
        android:padding="4dp"
        app:layout_constraintEnd_toStartOf="@+id/spinner3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NoGritar"
        app:srcCompat="@drawable/nocorrer" />

    <TextView
        android:id="@+id/Score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="300dp"
        android:layout_marginBottom="44dp"
        android:text="TextView"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/respuesta1"
        android:layout_width="185dp"
        android:layout_height="21dp"
        android:layout_marginTop="64dp"
        android:text="EZ JAN "
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/spinner2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.955"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/spinner1"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/respuesta2"
        android:layout_width="183dp"
        android:layout_height="23dp"
        android:layout_marginTop="12dp"
        android:text="EZ OHIU EGIN"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/spinner3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.951"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner2"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/respuesta3"
        android:layout_width="184dp"
        android:layout_height="23dp"
        android:layout_marginTop="9dp"
        android:text="EZ EGIN KORRIKA"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/spinner4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.955"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner3"
        app:layout_constraintVertical_bias="0.066" />

    <TextView
        android:id="@+id/respuesta4"
        android:layout_width="181dp"
        android:layout_height="26dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="25dp"
        android:text="ERAIKANA ERRESPETATU"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/spinner5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.943"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner4"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/respuesta5"
        android:layout_width="182dp"
        android:layout_height="27dp"
        android:layout_marginTop="8dp"
        android:text="ISILTASUNEZ IBILI"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.956"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner5" />

</androidx.constraintlayout.widget.ConstraintLayout>